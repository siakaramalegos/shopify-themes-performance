---
layout: base.njk
---

<h1>Shopify Theme Performance</h1>

{% for theme in themes %}
  <h2>{{ theme.name }}</h2>
  <p>ID: {{ theme.id }}</p>
  <p>
    {% if theme.sunset %}
      <em>VINTAGE</em>
    {% else %}
    <!-- TODO: slugify -->
      <em><a href="https://themes.shopify.com/themes/{{ theme.slug }}">View in theme store</a></em>
    {% endif %}
  </p>
  <div class="chart-grid">
    <div>
      <h3>Number of Origins</h3>
      {{ theme.charts.mobile.originsSvg | safe }}
      <p class="visually-hidden">
        {{ theme.charts.mobile.passingCwvAria }}
      </p>
    </div>
    <div>
      <h3>Origins passing all CWV</h3>
      {{ theme.charts.mobile.passingCwvSvg | safe }}
      <p class="visually-hidden">
        {{ theme.charts.mobile.passingCwvAria }}
      </p>
    </div>
  </div>
{% endfor %}
